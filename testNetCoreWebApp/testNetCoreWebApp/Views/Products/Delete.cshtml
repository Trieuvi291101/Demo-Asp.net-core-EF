@model testNetCoreWebApp.Models.Product

@{
    ViewData["Title"] = "Delete";
}



<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>
<div>
    <div class="flex-row col-12">
        <div class=" col-3">

            <img src="@("~/image/"+ Model.Image)" asp-append-version="true" alt="" width="280px" height="300px" />

        </div>
        <dl class="row">
            <dt class="col-sm-2">
                Tên sản phẩm
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                Mô tả
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                Đơn giá)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                Loại sản phẩm
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manufacturer)
            </dd>
            <dt class="col-sm-2">
                Ảnh
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Image)
            </dd>
            <dt class="col-sm-2">
                Ngày thêm
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CreatedDate)
            </dd>
            <dt class="col-sm-2">
                Danh mục sản phẩm
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            <a asp-action="Index">Trở về trang danh sách sản phẩm</a>
        </form>
    </div>
</div>
