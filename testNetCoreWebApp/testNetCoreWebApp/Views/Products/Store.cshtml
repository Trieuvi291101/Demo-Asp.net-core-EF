
@model IEnumerable<testNetCoreWebApp.Models.Product>
@{
    ViewData["Title"] = "Store";
}

<h1>Store</h1>

@using (Html.BeginForm())
{
    <div class="input-group col-8" style="padding: 5px">
        @Html.TextBox("kw")
        <input type="submit" value="Tìm kiếm" class="btn btn-success col-2" />
    </div>
}

<div class=" row .d-inline-flex">
    @foreach (var item in Model)
    {
        <div class="card text-center" style="width: 18rem;">
            <a asp-action="Details" asp-route-id="@item.Id"><img class="card-img-top pro-img" src="@("~/image/"+ item.Image)" asp-append-version="true" style="height:200px; width:200px" alt="Card image cap"></a>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(model => item.Name)</h5>
                <p class="card-text">Price: @Html.DisplayFor(model => item.Price)</p>
            </div>
        </div>
    }
</div>